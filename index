  <script>
    // Clock for story vibe
    function updateClock(){
      const d = new Date();
      const hh = String(d.getHours()).padStart(2,'0');
      const mm = String(d.getMinutes()).padStart(2,'0');
      document.getElementById('clock').textContent = `${hh}:${mm}`;
    }
    updateClock();
    setInterval(updateClock, 15000);

    // Toast
    const toast = document.getElementById('toast');
    const toastText = document.getElementById('toastText');
    function showToast(text){
      toastText.textContent = text;
      toast.classList.add('show');
      clearTimeout(showToast._t);
      showToast._t = setTimeout(() => toast.classList.remove('show'), 2200);
    }

    // Dopamine gimmick: floating sticker emojis
    const floatLayer = document.getElementById('floatLayer');
    const stickers = ["ğŸ’—","âœ¨","ğŸ«¶","ğŸŒ·","ğŸ“","ğŸ’Œ","ğŸŒˆ","ğŸ«§","ğŸ§¸","ğŸ˜Œ"];
    function rand(min,max){ return Math.random()*(max-min)+min; }

    function popStickers(count = 18){
      const w = window.innerWidth;
      const h = window.innerHeight;

      for(let i=0;i<count;i++){
        const el = document.createElement('span');
        el.className = 'floaty';
        el.textContent = stickers[Math.floor(Math.random()*stickers.length)];
        el.style.left = rand(20, w-20) + 'px';
        el.style.top  = rand(h*0.60, h*0.88) + 'px';
        el.style.animationDuration = rand(1.2, 1.9) + 's';
        el.style.animationDelay = rand(0, .12) + 's';
        el.style.fontSize = rand(18, 28) + 'px';
        floatLayer.appendChild(el);
        el.addEventListener('animationend', () => el.remove());
      }
    }

    // Button actions
    document.getElementById('dopamineBtn').addEventListener('click', () => {
      popStickers(22);
      showToast("Dopamine delivered. Youâ€™re not alone ğŸ’—");
    });

    document.getElementById('moreBtn').addEventListener('click', () => {
      popStickers(14);
      showToast("If today is heavy, text me anyway ğŸ«¶");
    });

    // Copy message
    const message = "Rooting for you, Jimmy.\nText me anytime. Iâ€™m here for you.";
    document.getElementById('copyBtn').addEventListener('click', async () => {
      try{
        await navigator.clipboard.writeText(message);
        popStickers(10);
        showToast("Copied. Send it to Jimmy ğŸ’Œ");
      }catch(e){
        showToast("Couldnâ€™t copy (browser blocked). You can still highlight + copy âœ¨");
      }
    });
  </script>
